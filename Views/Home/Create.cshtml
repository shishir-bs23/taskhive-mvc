@{
    ViewData["Title"] = "Create Task";
    var DueDateDefault = DateTime.Now.AddHours(2).ToString("yyyy-MM-ddTHH:mm");
    var MinValue = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}
@using TaskHive.Enums
@model TaskHive.Models.TaskModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 bg-light">
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-2">
                    <h5 class="mb-0 fs-5">Create a new task</h5>
                </div>
                

                <div class="card-body p-3">
                    <form asp-controller="Home" asp-action="CreateForm">
                        <div class="mb-2">
                            <label class="form-label fw-semibold fs-6 mb-1">Title</label>
                            <input class="form-control form-control-sm rounded-3" 
                                   type="text" placeholder="Add a new task" asp-for="TaskTitle">
                        </div>

                        <div class="mb-2">
                            <label class="form-label fw-semibold fs-6 mb-1">Description</label>
                            <textarea class="form-control form-control-sm rounded-3" rows="2" 
                                      placeholder="Add description" asp-for="TaskDescription"></textarea>
                        </div>

                        <div class="mb-2">
                            <label class="form-label fw-semibold fs-6 mb-1">Due Date</label>
                            <input class="form-control form-control-sm rounded-3" 
                                   type="datetime-local" value="@DueDateDefault" min="@MinValue" asp-for="TaskDueDate">
                        </div>

                        <div class="mb-2">
                            <label asp-for="TaskStatus" class="form-label fw-semibold fs-6 mb-1"></label>
                            <select asp-for="TaskStatus" class="form-select form-select-sm rounded-3" 
                                    asp-items="Html.GetEnumSelectList<Status>()"></select>
                        </div>

                        <div class="d-grid mt-3">
                            <button class="btn btn-primary btn-sm rounded-3 fs-6 py-2" type="submit">
                                <i class="bi bi-plus-circle me-1"></i>Create
                            </button>
                        </div>
                    </form>
                </div>
                
        </div>
    </div>
</div>
