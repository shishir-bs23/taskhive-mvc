@{
    var isEdit = Model != null && Model.TaskId > 0;
    ViewData["Title"] = isEdit ? "Edit Task" : "Create Task";

    var DueDateDefault = isEdit && Model.TaskDueDate != DateTime.MinValue
                         ? Model.TaskDueDate.ToString("yyyy-MM-ddTHH:mm")
                         : DateTime.Now.AddHours(2).ToString("yyyy-MM-ddTHH:mm");

    var MinValue = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
}
@using TaskHive.Enums
@model TaskHive.Models.TaskModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 bg-light">
               
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
                    <h5 class="mb-0 fs-5">@ViewData["Title"]</h5>
                </div>

                <div class="card-body p-4">
                    <form asp-controller="Home" asp-action="CreateForm" method="post">
                        <input type="hidden" asp-for="TaskId" />

                        <div class="mb-3">
                            <label asp-for="TaskTitle" class="form-label fw-semibold fs-6">Title</label>
                            <input class="form-control form-control-sm rounded-3" 
                                   type="text" placeholder="Add a new task" asp-for="TaskTitle" required>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TaskDescription" class="form-label fw-semibold fs-6">Description</label>
                            <textarea class="form-control form-control-sm rounded-3" rows="3" 
                                      placeholder="Add description" asp-for="TaskDescription"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TaskDueDate" class="form-label fw-semibold fs-6">Due Date</label>
                            <input class="form-control form-control-sm rounded-3" 
                                   type="datetime-local" value="@DueDateDefault" min="@MinValue" asp-for="TaskDueDate">
                        </div>

                        <div class="mb-3">
                            <label asp-for="TaskStatus" class="form-label fw-semibold fs-6">Status</label>
                            <select asp-for="TaskStatus" class="form-select form-select-sm rounded-3" 
                                    asp-items="Html.GetEnumSelectList<Status>()"></select>
                        </div>

                        <div class="d-grid mt-4">
                            <button class="btn btn-primary btn-sm rounded-3 fs-6 py-2" type="submit">
                                <i class="bi @(isEdit ? "bi-pencil-square" : "bi-plus-circle") me-1"></i>
                                @(isEdit ? "Update" : "Create")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
