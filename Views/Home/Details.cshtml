@{
    ViewData["Title"] = "View Task";
}
@using TaskHive.Enums
@model TaskHive.Models.TaskModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 bg-light">
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-2">
                    <h5 class="mb-0 fs-5">Task Details</h5>
                </div>
                

                <div class="card-body p-3">
                    <form asp-controller="Home" asp-action="CreateForm">
                           <input readonly class="form-control form-control-sm rounded-3 mt-4" 
                                   type="number" asp-for="TaskId">
                        <div class="mb-2">
                            <input readonly class="form-control form-control-sm rounded-3 mt-2" 
                                   type="text" asp-for="TaskTitle">
                        </div>

                        <div class="mb-2">
                         <textarea mt-4 readonly class="form-control form-control-sm rounded-3" rows="2" 
                                     asp-for="TaskDescription"></textarea>
                        </div>

                        <div class="mb-2">
                            <input mt-4 readonly class="form-control form-control-sm rounded-3" 
                                   type="datetime-local" asp-for="TaskDueDate">
                        </div>

                        <div class="mb-2">
                            <label asp-for="TaskStatus" class="form-label fw-semibold fs-6 mb-1"></label>
                            <select disabled asp-for="TaskStatus" class="form-select form-select-sm rounded-3" 
                                    asp-items="Html.GetEnumSelectList<Status>()"></select>
                        </div> 

                     <div class="d-grid mt-3">
 
    <button class="btn btn-success btn-sm rounded-3 fs-6 py-2 mt-4" asp-action="Create" asp-route-id="@Model.TaskId">
        <i class="bi bi-pencil-square me-1"></i> Edit
    </button>

   
    <button class="btn btn-danger btn-sm rounded-3 fs-6 py-2 mt-4" asp-action="Detete" asp-route-id="@Model.TaskId">
        <i class="bi bi-trash me-1"></i> Delete
    </button>
</div>

                    </form>
                </div>
                
        </div>
    </div>
</div>
