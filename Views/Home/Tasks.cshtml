@Model PaginatedList<TaskModel>
@{
    ViewData["Title"]="Tasks";
    
}

    <div>
<h1>
    @ViewData["Title"]
</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Home" asp-action="Tasks">
            <input name="searchString" type="search by name" class="form-control" aria-label="Search">
            <button class="btn btn-dark" type="submit">Search</button>
        </form>
    </div>

</div>
</br>
<table class="table">
    <thead>
    <tr>
        <th>
         <a asp-controller="Home" asp-action="Tasks" asp-route-sortOrder="id_asc" class="text-dark">Task Id</a>
        </th>
        <th>
         <a asp-controller="Home" asp-action="Tasks" asp-route-sortOrder="title_asc" class="text-dark">Title</a>
        </th>
        <th>
            <a asp-asp-controller="Home" asp-action="Tasks" asp-route-sortOrder="creation_date_asc" class="text-dark">
            Creation Date
            </a>
        </th>
         <th>
                  <a asp-asp-controller="Home" asp-action="Tasks" asp-route-sortOrder="due_date_asc" class="text-dark">
            Due Date
            </a>
        </th>
        <th>
            Status
        </th>
    </tr>
    </thead>
    <tbody>
        @{
            foreach(var task in Model.Items){
                 <tr onclick="location.href='@Url.Action("Details", "Home", new { id = task.TaskId })';" style="cursor:pointer;">
                <td>
                        @task.TaskId
                    </td>
                     <td>
                        @task.TaskTitle
                    </td>
                    <td>
                        @task.TaskCreationDate
                    </td>
                     <td>
                        @task.TaskDueDate
                    </td>
                    <td>
                        @task.TaskStatus
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Create" asp-route-id="@task.TaskId">Edit</a>
                        <a asp-controller="Home" asp-action="Detete" asp-route-id="@task.TaskId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
<nav>
    <ul class="pagination justify-content-end">

        <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
            <a class="page-link text-black" asp-route-pageNumber="1">First</a>
        </li>

        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                <a class="page-link text-black" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link text-black" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>

        <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
            <a class="page-link text-black" asp-route-pageNumber="@Model.TotalPages">Last</a>
        </li>
    </ul>
</nav>

    </div>
</div>
    <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create Task</a>
  </div>
  </div>