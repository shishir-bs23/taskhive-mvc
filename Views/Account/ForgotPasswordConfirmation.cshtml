@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4 text-center">
                    <h3 class="mb-3 text-success">Reset Email Sent!</h3>
                    <p>If the email exists, a password reset link has been sent. Check your inbox.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-2">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
